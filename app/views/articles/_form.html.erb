<div class="small-container center-block">

<%= form_with(model: @article, local: true) do |form| %>

    <div class="field">
        <br/>
        <%=form.label :title %>
        <%=form.text_field :title %>
    </div>

    <div>
        <br/>
        <%=form.label :category_elements %>
        <div class="row">
            <% @categories.each do |category|  %>
                <label class="col-6 col-sm-4">
                    <%= form.check_box :category_elements, {multiple: true}, category.id, nil %>
                    <%= category.title %>
                
                </label>
            <%end%>
        </div>
    </div>

    <div class="field">
        <br/>
        <%=form.label :content %>
        <%=form.rich_text_area :content %>
    </div>

    <div>
        <br/>
        <%= form.submit  %>
    </div>

<%end%>

</div>